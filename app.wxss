/* 页脚导航栏 */
.footer{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  text-align: center;
  color: #fff;
  z-index: 999;
  font-size:34rpx;
}
.footer image{
  height:50rpx;
  width:50rpx;
  padding: 20rpx 15rpx 20rpx 0;
  vertical-align: middle;
}
.footer .footer-bar{
  position: relative;
  display:flex;
  padding:10rpx;
  background:#74c5be;
  z-index: 100;
}
.footer .foot-center{
  position: relative;
  box-shadow: -1rpx 0 0 #666 , 1rpx 0 0 #666;

}
.footer .foot-center:before{
  position: absolute;
  left: -2rpx;
  top: 50%;
  margin-top: -43rpx;
  content:'';
  display: block;
  height: 86rpx;
  width: 2rpx;
   background: white; 
   z-index: 2;
}
.footer .foot-center:after{
  position: absolute;
  right: -2rpx;
  top: 50%;
  margin-top: -43rpx;
  content:'';
  display: block;
  height: 86rpx;
  width: 2rpx;
  background: white;
}
/* footer默认为bottom: 134rpx;显示 */
.footer .footer-nav{
  position: absolute;
  bottom: -500rpx;
  right: 30rpx;
  width: 460rpx;
  display: flex;
  flex-wrap: wrap;
  font-size: 24rpx;
  color: #333;
  background: #f9f7f6;
  padding: 20rpx;
}
.footer .footer-nav .nav-list{
  width: 33.3%;
}
.footer .footer-nav image{
  padding: 20rpx 0;
  width: 75rpx;
  height: 75rpx;
}
.footer .footer-nav:after{
  position: absolute;
  display: block;
  content: '';
  bottom: -28rpx;
  right: 100rpx;
  height: 0;
  width: 0;
  border-left: 30rpx solid transparent;
  border-right: 30rpx solid transparent;
  border-top: 30rpx solid #f9f7f6;
  border-bottom: none;
}
